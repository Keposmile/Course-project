<form id="addForm" action="">
  <table>
    <!-- <tr>
      <td><label for="customerId">客户编号</label></td>
      <td><input id="customerId" type="text"></td>
    </tr> -->
    <tr>
      <td><label for="name">姓名</label></td>
      <td><input id="name" type="text" value="<%if(posts!=null){%><%=posts.name%><%}%>"></td>
    </tr>
    <tr>
      <td><label for="gender">性别</label></td>
      <td><label for="gender_male"><input id="gender_male" <%if(posts!=null && posts.gender){%>checked="true"<%}%>  value="true" name="gender" type="radio">男</label>
        <label for="gender_female"><input id="gender_female" <%if(posts!=null && (!posts.gender)){%>checked="true" <%}%> value="false" name="gender" type="radio">女</label></td>
    </tr>
    <tr>
      <td><label for="customerSource">客户来源</label></td>
      <td><input id="customerSource" type="text" value="<%if(posts!=null){%><%=posts.customerSource%><%}%>"></td>
    </tr>
    <tr>
      <td><label for="tel">联系电话</label></td>
      <td><input id="tel" type="text" value="<%if(posts!=null){%><%=posts.tel%><%}%>"></td>
    </tr>
    <tr>
      <td><label for="email">邮箱</label></td>
      <td><input id="email" type="text" value="<%if(posts!=null){%><%=posts.email%><%}%>"></td>
    </tr>
    <tr>
      <td><label for="address">通讯地址</label></td>
      <td><input id="address" type="text" value="<%if(posts!=null){%><%=posts.address%><%}%>"></td>
    </tr>
    <tr>
      <td><label for="credit">信用状况</label></td>
      <td><input id="credit" type="text" value="<%if(posts!=null){%><%=posts.credit%><%}%>"></td>
    </tr>
    <tr>
      <td><label for="dealTimes">交易次数</label></td>
      <td><input id="dealTimes" type="text" value="<%if(posts!=null){%><%=posts.dealTimes%><%}%>"></td>
    </tr>
    <tr>
      <td><label for="dealSumMoney">交易金额</label></td>
      <td><input id="dealSumMoney" type="text" value="<%if(posts!=null){%><%=posts.dealSumMoney%><%}%>"></td>
    </tr>
    <tr>
      <td><label for="lastDealTime">最近交易时间</label></td>
      <td><input id="lastDealTime" type="date" value="<%if(posts!=null){%><%=posts.lastDealTime%><%}%>"></td>
    </tr>
    <tr>
      <td></td>
      <td><img id="submitBtn" src="../images/提交.png" alt=""></td>
    </tr>
  </table>

</form>
